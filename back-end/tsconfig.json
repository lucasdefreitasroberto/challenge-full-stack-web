{
	"compilerOptions": {
		"target": "es2021",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		"baseUrl": "./",
		"outDir": "./dist",
		"types": ["node", "express"],
		"typeRoots": ["src/@types", "./node_modules/@types"],
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["./prisma/*.ts", "src/**/*.ts", "tests/**/*.ts"],
	"exclude": ["./dist"]
}
